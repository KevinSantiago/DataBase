# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page (Must be called first)
GET     /DealItSrv                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# Login / Logout
POST    /DealItSrv/login            controllers.Application.login
POST    /DealItSrv/logout           controllers.Application.logout

# Users
GET     /DealItSrv/users            controllers.Application.getUsers
GET     /DealItSrv/users/:id        controllers.Application.getUserByID(id: Integer)
POST    /DealItSrv/users            controllers.Application.addUser
PUT     /DealItSrv/users            controllers.Application.updateUser
DELETE  /DealItSrv/users/:id        controllers.Application.deleteUserByID(id: Integer)

# Items
GET     /DealItSrv/items            controllers.Application.getItems
GET     /DealItSrv/items/:id        controllers.Application.getItemByID(id: Integer)
POST    /DealItSrv/items            controllers.Application.addItem
PUT     /DealItSrv/items            controllers.Application.updateItem
DELETE  /DealItSrv/items/:id        controllers.Application.deleteItemByID(id: Integer)


    