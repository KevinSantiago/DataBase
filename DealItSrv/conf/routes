# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /DealItSrv                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /DealItSrv/items            controllers.Application.getItems
GET     /DealItSrv/items/:id        controllers.Application.getItemByID(id: Integer)
POST    /DealItSrv/items            controllers.Application.addItem
PUT     /DealItSrv/items            controllers.Application.updateItem
DELETE  /DealItSrv/items/:id        controllers.Application.deleteItemByID(id: Integer)


    